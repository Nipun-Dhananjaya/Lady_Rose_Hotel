        <PasswordField fx:id="txtOldPwd" layoutX="148.0" layoutY="207.0" onAction="#escapeNewUserIdOnAction" prefHeight="34.0" prefWidth="294.0" promptText="Enter Old Password..." style="-fx-border-color: blue;">
