            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor>
        </PasswordField>
        <RadioButton fx:id="receptionistRdBtn" layoutX="148.0" layoutY="77.0" mnemonicParsing="false" text="Receptionist">
